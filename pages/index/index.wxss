/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  padding: 40rpx 30rpx 60rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #f0f9ff 0%, #e6f7ff 100%);
}

/* 顶部品牌区 */
.brand-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
  padding-top: 10rpx;
}

.brand-icon {
  font-size: 36rpx;
  background: linear-gradient(135deg, #07c160, #05a650);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-shadow: 0 2rpx 4rpx rgba(7, 193, 96, 0.3);
}

.more-btn {
  font-size: 32rpx;
  color: #999;
  padding: 10rpx;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.more-btn:hover {
  background-color: rgba(0, 0, 0, 0.05);
}

/* 标题/标语区 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.main-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
  line-height: 1.3;
}

.sub-title {
  font-size: 28rpx;
  color: #666;
  display: block;
}

/* 核心输入区 */
.input-section {
  position: relative;
  margin-bottom: 60rpx;
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.input-section:hover {
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
  transform: translateY(-2rpx);
}

.input-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.input-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.textarea {
  width: 100%;
  min-height: 220rpx;
  padding: 0;
  border: none;
  background-color: transparent;
  font-size: 28rpx;
  color: #333;
  resize: none;
  box-sizing: border-box;
  line-height: 1.6;
}

.textarea::placeholder {
  color: #999;
  font-size: 26rpx;
}

.example-btn {
  display: flex;
  align-items: center;
  gap: 5rpx;
  font-size: 24rpx;
  color: #07c160;
  padding: 10rpx;
  border-radius: 8rpx;
  transition: all 0.2s ease;
}

.example-btn:active {
  background-color: rgba(7, 193, 96, 0.1);
}

.example-icon {
  font-size: 24rpx;
}

.example-text {
  font-size: 24rpx;
}

/* 头部操作按钮组 */
.input-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

/* 小操作按钮 */
.action-btn-small {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  transition: all 0.2s ease;
}

.action-btn-small:active {
  transform: scale(0.95);
}

.action-btn-small.success {
  background: linear-gradient(135deg, #07c160, #05a650);
}

.action-btn-small.success .action-icon,
.action-btn-small.success .action-text {
  color: #fff;
}

.action-btn-small.primary {
  background: linear-gradient(135deg, #07c160, #05a650);
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.25);
}

.action-btn-small.primary .action-icon,
.action-btn-small.primary .action-text {
  color: #fff;
}

.action-icon {
  font-size: 24rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

/* 优化风格选择区 */
.style-section {
  margin-bottom: 60rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 25rpx;
  font-weight: 500;
  text-align: center;
}

.style-options {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  background-color: #f0f0f0;
  border-radius: 12rpx;
  padding: 10rpx;
}

.style-option {
  flex: 1;
  padding: 20rpx;
  border-radius: 8rpx;
  background-color: white;
  text-align: center;
  transition: all 0.3s ease;
}

.style-option.selected {
  background-color: #07c160;
}

.style-option.selected .style-name {
  color: white;
}

.style-name {
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  color: #333;
}

/* 行动按钮 */
.action-section {
  margin-bottom: 60rpx;
}

.action-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #07c160, #05a650);
  color: white;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  box-shadow: 0 6rpx 20rpx rgba(7, 193, 96, 0.4);
  transition: all 0.3s ease;
}

.action-btn:hover:not([disabled]) {
  transform: translateY(-3rpx);
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.5);
}

.action-btn:active:not([disabled]) {
  transform: translateY(0);
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.4);
}

.action-btn[disabled] {
  background-color: #a8dabf;
  box-shadow: none;
}

/* 隐私提示 */
.privacy-section {
  text-align: center;
  font-size: 22rpx;
  color: #999;
  line-height: 1.4;
  margin-top: 20rpx;
}

.privacy-text {
  font-size: 22rpx;
  color: #999;
}

.privacy-link {
  font-size: 22rpx;
  color: #07c160;
  text-decoration: underline;
  margin: 0 5rpx;
}

/* ========== 参考示例弹窗样式 ========== */

/* 遮罩层 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  z-index: 100;
}

.modal-mask.show {
  opacity: 1;
  visibility: visible;
}

/* 弹窗主体 */
.example-modal {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  border-radius: 40rpx 40rpx 0 0;
  padding: 40rpx 30rpx;
  padding-bottom: calc(60rpx + env(safe-area-inset-bottom));
  transform: translateY(100%);
  transition: all 0.3s ease;
  z-index: 101;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.example-modal.show {
  transform: translateY(0);
}

/* 弹窗头部 */
.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  padding: 10rpx;
}

/* 弹窗内容 */
.modal-content {
  flex: 1;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.required {
  color: #ff4d4f;
}

/* 选项列表 */
.option-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.option-item {
  padding: 16rpx 32rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.2s ease;
}

.option-item.selected {
  background-color: #07c160;
  color: #fff;
}

/* 岗位输入框 */
.position-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.position-input:focus {
  border-color: #07c160;
}

/* 弹窗底部 */
.modal-footer {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f0f0f0;
}

.generate-btn {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(135deg, #07c160, #05a650);
  color: white;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(7, 193, 96, 0.4);
}

.generate-btn[disabled] {
  background: #a8dabf;
  box-shadow: none;
}

/* 自定义职业分类输入区域 */
.custom-category-section {
  margin-top: 24rpx;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 16rpx;
  animation: slideDown 0.3s ease;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.custom-label {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.custom-category-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  background-color: #fff;
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.custom-category-input:focus {
  border-color: #07c160;
}

.custom-hint {
  display: block;
  text-align: right;
  font-size: 22rpx;
  color: #999;
  margin-top: 12rpx;
}
