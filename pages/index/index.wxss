/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  padding: 40rpx 30rpx 60rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #f0f9ff 0%, #e6f7ff 100%);
}

/* 顶部品牌区 */
.brand-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
  padding-top: 10rpx;
}

.brand-icon {
  font-size: 36rpx;
  background: linear-gradient(135deg, #07c160, #05a650);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-shadow: 0 2rpx 4rpx rgba(7, 193, 96, 0.3);
}

.more-btn {
  font-size: 32rpx;
  color: #999;
  padding: 10rpx;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.more-btn:hover {
  background-color: rgba(0, 0, 0, 0.05);
}

/* 标题/标语区 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.main-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
  line-height: 1.3;
}

.sub-title {
  font-size: 28rpx;
  color: #666;
  display: block;
}

/* 核心输入区 */
.input-section {
  position: relative;
  margin-bottom: 60rpx;
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.input-section:hover {
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
  transform: translateY(-2rpx);
}

.input-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.textarea {
  width: 100%;
  min-height: 220rpx;
  padding: 0;
  border: none;
  background-color: transparent;
  font-size: 28rpx;
  color: #333;
  resize: none;
  box-sizing: border-box;
  line-height: 1.6;
}

.textarea::placeholder {
  color: #999;
  font-size: 26rpx;
}

.example-btn {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  display: flex;
  align-items: center;
  gap: 5rpx;
  font-size: 24rpx;
  color: #07c160;
}

.example-icon {
  font-size: 24rpx;
}

.example-text {
  font-size: 24rpx;
}

/* 优化风格选择区 */
.style-section {
  margin-bottom: 60rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 25rpx;
  font-weight: 500;
  text-align: center;
}

.style-options {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  background-color: #f0f0f0;
  border-radius: 12rpx;
  padding: 10rpx;
}

.style-option {
  flex: 1;
  padding: 20rpx;
  border-radius: 8rpx;
  background-color: white;
  text-align: center;
  transition: all 0.3s ease;
}

.style-option.selected {
  background-color: #07c160;
}

.style-option.selected .style-name {
  color: white;
}

.style-name {
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  color: #333;
}

/* 行动按钮 */
.action-section {
  margin-bottom: 60rpx;
}

.action-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #07c160, #05a650);
  color: white;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  box-shadow: 0 6rpx 20rpx rgba(7, 193, 96, 0.4);
  transition: all 0.3s ease;
}

.action-btn:hover:not([disabled]) {
  transform: translateY(-3rpx);
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.5);
}

.action-btn:active:not([disabled]) {
  transform: translateY(0);
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.4);
}

.action-btn[disabled] {
  background-color: #a8dabf;
  box-shadow: none;
}

/* 隐私提示 */
.privacy-section {
  text-align: center;
  font-size: 22rpx;
  color: #999;
  line-height: 1.4;
  margin-top: 20rpx;
}

.privacy-text {
  font-size: 22rpx;
  color: #999;
}

.privacy-link {
  font-size: 22rpx;
  color: #07c160;
  text-decoration: underline;
  margin: 0 5rpx;
}
